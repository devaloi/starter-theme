{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Ocean",
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#0ea5e9",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#475569",
					"name": "Secondary"
				},
				{
					"slug": "accent",
					"color": "#06b6d4",
					"name": "Accent"
				},
				{
					"slug": "text",
					"color": "#0f172a",
					"name": "Text"
				},
				{
					"slug": "background",
					"color": "#ffffff",
					"name": "Background"
				},
				{
					"slug": "surface",
					"color": "#f1f5f9",
					"name": "Surface"
				},
				{
					"slug": "muted",
					"color": "#64748b",
					"name": "Muted"
				},
				{
					"slug": "border",
					"color": "#cbd5e1",
					"name": "Border"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Playfair Display', serif",
					"slug": "heading",
					"name": "Heading"
				},
				{
					"fontFamily": "'Inter', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, sans-serif",
					"slug": "body",
					"name": "Body"
				},
				{
					"fontFamily": "'JetBrains Mono', ui-monospace, monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "600",
					"lineHeight": "1.3"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		},
		"blocks": {
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--accent)",
					"text": "var(--wp--preset--color--background)"
				},
				"border": {
					"radius": "0.5rem"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--accent)",
					"style": "solid",
					"width": "0 0 0 4px"
				},
				"color": {
					"background": "var(--wp--preset--color--surface)"
				}
			}
		}
	}
}