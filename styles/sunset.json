{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Sunset",
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#ea580c",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#78716c",
					"name": "Secondary"
				},
				{
					"slug": "accent",
					"color": "#f59e0b",
					"name": "Accent"
				},
				{
					"slug": "text",
					"color": "#292524",
					"name": "Text"
				},
				{
					"slug": "background",
					"color": "#fef7ed",
					"name": "Background"
				},
				{
					"slug": "surface",
					"color": "#fff7ed",
					"name": "Surface"
				},
				{
					"slug": "muted",
					"color": "#a8a29e",
					"name": "Muted"
				},
				{
					"slug": "border",
					"color": "#e7e5e4",
					"name": "Border"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Crimson Text', serif",
					"slug": "heading",
					"name": "Heading"
				},
				{
					"fontFamily": "'Open Sans', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, sans-serif",
					"slug": "body",
					"name": "Body"
				},
				{
					"fontFamily": "'Fira Code', ui-monospace, monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "700",
					"lineHeight": "1.1",
					"letterSpacing": "-0.02em"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "600",
					"lineHeight": "1.2",
					"letterSpacing": "-0.01em"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"h3": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		},
		"blocks": {
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"border": {
					"radius": "0.375rem"
				},
				"typography": {
					"fontWeight": "700",
					"letterSpacing": "0.025em"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--accent)",
					"style": "solid",
					"width": "0 0 0 5px"
				},
				"color": {
					"background": "var(--wp--preset--color--surface)"
				},
				"typography": {
					"fontStyle": "italic",
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"core/cover": {
				"color": {
					"text": "var(--wp--preset--color--background)"
				}
			}
		}
	}
}